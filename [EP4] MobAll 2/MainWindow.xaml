        <Button x:Name="B_Remove" HorizontalAlignment="Left" Margin="316,451,0,0" VerticalAlignment="Top" Width="37" FontSize="14.667" Height="33" Background="White" BorderBrush="{x:Null}" Foreground="White" ToolTip="Удалить Npc" Click="MI_Remove_Click">
